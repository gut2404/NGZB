@using NGZB.Controllers
@using NGZB.Models.Object;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Html.Partial("_JsCss")
    @{ LoginUser loginuser = new LoginUser();
        var objTokenKey = SysController.__TokenKey(); }
    <title>修改密码</title>
    <script>
        var url_ChangePassWord = '@Url.Action("__ChangePassWord","User",objTokenKey)';
    </script>
</head>
<body>
    <div id="password" style="padding:5px 5px 5px 30px">
        <table cellpadding="5">
            <tr>
                <td>用户姓名:</td>
                <td>@loginuser.LoginUserName</td>
            </tr>
            <tr>
                <td>归属单位:</td>
                <td>@loginuser.LoginGroupName</td>
            </tr>
            <tr>
                <td>原密码:</td>
                <td><input id="oldpassword" style="width:160px" class="easyui-textbox" type="password" name="name" data-options="required:false" /></td>
            </tr>
            <tr>
                <td>新密码:</td>
                <td>
                    <input id="newpassword" style="width:160px" class="easyui-textbox" type="password" name="email" data-options="required:false" />
                </td>
            </tr>
            <tr>
                <td>确认密码:</td>
                <td><input id="confirmpass" style="width:160px" class="easyui-textbox" type="password" name="subject" data-options="required:false" /></td>
            </tr>
        </table>
        <div style="text-align:center;padding:5px">
            <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-save" onclick="subcchangepass();">确认修改</a>
        </div>
    </div>
    <script src="~/JsApp/User/_changepassword.js"></script>
</body>
</html>