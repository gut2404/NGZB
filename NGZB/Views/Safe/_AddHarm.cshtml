@using NGZB.Controllers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Html.Partial("_JsCss")
    @{ var objTokenKey = SysController.__TokenKey(); }
    <title>添加风险因素</title>
    <script>
        var url_add = '@Url.Action("__AddHarm", "Safe",objTokenKey)';
    </script>
</head>
<body>
    <table style="width:100%;height:100%">
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:red">
                作业类型
            </td>
            <td>
                <input id="worktypeid" class="easyui-combobox"
                       data-options="
                       url:'@Url.Action("__GetWorkType","Safe",objTokenKey)',
				       method:'get',
				       valueField:'id',
					   textField:'text',
					   panelHeight:'auto',
                       editable: false">
            </td>
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:red">
                风险描述
            </td>
            <td>
                @Html.Partial("_SimpleEdit", new ViewDataDictionary { { "id", "securityinfo" }, { "w", "95%" }, { "h", "200px" }, { "t", "0" } })
            </td>
        </tr>
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:blue">
                防范措施
            </td>
            <td>
                @Html.Partial("_SimpleEdit", new ViewDataDictionary { { "id", "defendagainst" }, { "w", "95%" }, { "h", "200px" }, { "t", "0" } })
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center;padding:5px">
                <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-add" plain="@SysController.__ThemsType()" onclick="addHarm();">添加风险</a>
            </td>
        </tr>
    </table>
    <script src="~/JsApp/Safe/_addharm.js"></script>
</body>
</html>