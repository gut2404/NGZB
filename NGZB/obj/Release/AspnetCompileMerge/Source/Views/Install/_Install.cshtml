@using NGZB.Controllers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Html.Partial("_JsCss")
    <script>
        var url_active='@Url.Action("__ActiveShow", "Install")'
    </script>
    <title>系统初始化操作</title>
</head>
<body class="easyui-layout">
    <div data-options="region:'center',title:'系统模块初始化操作',iconCls:'icon-desktop'">
        <table id="dg" class="easyui-datagrid" title="" style="width:700px;height:250px"
               data-options="fit:true,border:false,singleSelect:true,collapsible:false,url:'@Url.Action("__GetInstallModelList","Install")',method:'get',pagination:true,pageSize:@SysController.__PageSize(),loadFilter:pagerFilter,fitColumns:true,striped:true,onLoadSuccess:function(data){formatlinbutton();}">
            <thead>
                <tr>
                    <th data-options="field:'orderbys',width:50,align:'center'">排序</th>
                    <th data-options="field:'modelname',width:200,halign:'center'">模块名称</th>
                    <th data-options="field:'modelinfo',width:500,halign:'center'">模块描述</th>
                    <th data-options="field:'modelactive',width:80,align:'center',formatter:formatlink">操作</th>
                </tr>
            </thead>
        </table>
    </div>
    <div data-options="region:'east',split:false,collapsible:false,href:'@Url.Action("_InstallHelp","Install")',iconCls:'icon-help'" title="初始化帮助说明" style="width:40%"></div>
    <script src="~/JsApp/Install/_install.js"></script>
</body>
</html>