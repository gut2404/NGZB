@using NGZB.Controllers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Html.Partial("_JsCss")
    @{ var objTokenKey = SysController.__TokenKey(); }
    <title>修改风险因素</title>
    <script>
        var url_edit = '@Url.Action("__EditHarm", "Safe",objTokenKey)';
    </script>
</head>
<body>
    <table style="width:100%">
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:red">
                作业类型
            </td>
            <td>
                <input id="safeharmid" type="hidden" value="@ViewBag.safeHarmID" />
                <input id="oldharmtypeid" type="hidden" value="@ViewBag.harmTypeID" />
                <input id="worktypeid" class="easyui-combobox"
                       data-options="
                       url:'@Url.Action("__GetWorkType","Safe",objTokenKey)',
				       method:'get',
				       valueField:'id',
					   textField:'text',
					   panelHeight:'auto'">
            </td>
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:red">
                风险描述
            </td>
            <td>
                @Html.Partial("_SimpleEdit", new ViewDataDictionary { { "id", "securityinfo" }, { "w", "95%" }, { "h", "200px" }, { "t", "0" } })
                <input id="oldsecurityinfo" type="hidden" value="@ViewBag.securityInfo" />
            </td>
        </tr>
        <tr>
            <td style="text-align:right;padding-right:5px;width:100px;color:blue">
                防范措施
            </td>
            <td>
                @Html.Partial("_SimpleEdit", new ViewDataDictionary { { "id", "defendagainst" }, { "w", "95%" }, { "h", "200px" }, { "t", "0" } })
                <input id="olddefendagainst" type="hidden" value="@ViewBag.defendAgainst" />
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center;padding:5px">
                <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-edit" plain="@SysController.__ThemsType()" onclick="editHarm();">修改风险</a>
            </td>
        </tr>
    </table>
    <script src="~/JsApp/Safe/_editharm.js"></script>
</body>
</html>