@using NGZB.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>内部公告</title>
    @Html.Partial("_JsCss")
    @{var objTokenKey = SysController.__TokenKey();}
    <script>
        var url_getmessage = '@Url.Action("__GetMessage", "Message",objTokenKey)';
    </script>
</head>
<body style="overflow:hidden">
    <table id="dgmsg" class="easyui-datagrid" title="内部公告"
           data-options="@SysController.__PublishTool(),iconCls:'icon-my_bell',fit:true,rownumbers:false,singleSelect:true,striped:true,pagination:false,url: '@Url.Action("__GetMessageList","Message", objTokenKey)',pagination:true,pageSize:@SysController.__PageSize(),loadFilter:pagerFilter,onLoadSuccess:function(data){formatlinbutton();},fitColumns:true,border:false">
